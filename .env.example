# Backend Configuration
BACKEND_BASE_URL=https://api.inspectiq.app
INSPECTION_WEBHOOK_URL=${BACKEND_BASE_URL}/api/v1/webhooks/inspection-complete
DIAGNOSIS_WEBHOOK_URL=${BACKEND_BASE_URL}/api/v1/webhooks/diagnosis-complete

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-vision-preview

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/inspectiq

# JWT Authentication
SECRET_KEY=your-super-secret-key-change-in-production-use-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Storage
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760
USE_S3=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# Stripe Payments (Optional)
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

# Email Configuration (Resend)
RESEND_API_KEY=your_resend_api_key_here
EMAIL_DOMAIN=inspectiq.app

# Application Settings
APP_ENV=development
LOG_LEVEL=INFO
FRONTEND_URL=http://localhost:3000

# Optional: For production async processing
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
